<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_5"
    android:layout_marginTop="@dimen/dp_5"
    android:layout_height="wrap_content">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/share_user_img"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/user" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/share_image"
                    android:layout_weight="1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_margin="@dimen/dp_5"
                    android:src="@drawable/dir" />

                <ImageView
                    android:id="@+id/share_type"
                    android:layout_width="24dp"
                    android:layout_weight="1"
                    android:layout_height="24dp"
                    android:layout_margin="@dimen/dp_5"
                    android:src="@drawable/share_public" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/dp_10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/username"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:textStyle="bold"
                    android:text="dadadsafdsfdsafdsafdsafdsa"
                    android:layout_marginBottom="2dp"
                    android:textAlignment="textEnd"
                    android:singleLine="true"/>
                <TextView
                    android:id="@+id/file_name"
                    android:layout_width="180dp"
                    android:layout_marginTop="2dp"
                    android:text="dadadsafdsfdsafdsafdsafdsa"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:textAlignment="textEnd"
                    android:layout_marginBottom="2dp"
                    android:singleLine="true"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:orientation="horizontal">

                <com.neu.cloudfiles.utils.CircleButton
                    android:id="@+id/share_copy_btn"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:padding="17dp"
                    android:src="@drawable/share_qr"
                    app:cb_color="@color/blue"
                    app:cb_pressedRingWidth="8dip" />
                <com.neu.cloudfiles.utils.CircleButton
                    android:id="@+id/share_love"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:padding="@dimen/dp_15"
                    android:src="@drawable/share_love"
                    app:cb_color="@color/light_orange"
                    app:cb_pressedRingWidth="8dip" />
                <com.neu.cloudfiles.utils.CircleButton
                    android:id="@+id/share_save"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:padding="@dimen/dp_15"
                    android:src="@drawable/file_download"
                    app:cb_color="@color/dull_blue"
                    app:cb_pressedRingWidth="8dip" />
            </LinearLayout>
        </LinearLayout>



    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>